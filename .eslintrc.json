{
  "env": {
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": [
    "node_modules/",
    "build/",
    "dist/"
  ],
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    "node/no-missing-import": "off"
  },
  "settings": {
    "react": {
      "version": "^18.2.0"
    }
  }
}
